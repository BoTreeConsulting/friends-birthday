= form_for @birthday_avatar,  :url => {:action => "create"} do |f|
  - if @birthday_avatar.errors.any?
    #error_explanation
      %h2= "#{pluralize(@birthday_avatar.errors.count, "error")} prohibited this birthday_avatar from being saved:"
      %ul
        - @birthday_avatar.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :avatar
    = f.file_field :avatar
  .actions
    = f.submit 'Save'


