
%div{:style=>"background-color:#3B5998"}
  = image_tag "like.png"
  %span{:style => "color:#fff;font-weight:bold;font-size:15px;"}
    Best 5 liked status
- if @user_most_liked_status.present?
  %table{:style => "width:100%"}
    %tr
      %th{:width => "80%"}
        Status at wall
      %th
        Total Likes
    - @user_most_liked_status.each_with_index do |status,index|
      %tr{:id => "most_commented_likes_status"}
        %td{:id => "#{index+1}",:width => "30%",:title => "#{status["message"]}",:style => "cursor: pointer;font-size: 12px;font-weight: bold;",:class => "tdCell"}
          -#%div{:style => "width:100px;background:black;height:100px"}
          = "#{status["message"]}".truncate(70, :separator => ' ')
        %td{:style => "text-align:center;font-size: 12px;font-weight: bold;"}
          %div
            = image_tag "like.png"
          = status["likes_count"]
- else
  %tr
    %td{:rowspan=>2}
      No data available
