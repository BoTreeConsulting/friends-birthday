- if @total_user_statuses_count.present?
  %em
    = "Information is based on #{@total_user_statuses_count} statuses from #{@user_status_chart_data[1][0]} to #{Time.now.strftime("%m-%Y")}"

  %table{:style => "font-size: 12px;border: 2px solid #000000;margin-left: 25px;"}
    %tr
      %td{:style => "padding: 3px 22px;"}
        Total Statues
      %td{:style => "padding: 3px 22px;"}
        = @total_user_statuses_count
    %tr
      %td{:style => "padding: 3px 22px;"}
        Total Comments
      %td{:style => "padding: 3px 22px;"}
        = @total_status_comments
    %tr
      %td{:style => "padding: 3px 22px;"}
        Total Likes
      %td{:style => "padding: 3px 22px;"}
        = @total_status_likes



%div{:style=>"background-color:#3B5998"}
  = image_tag "comment.png"
  %span{:style => "color:#fff;font-weight:bold;font-size:15px;"}
    Best 5 commented statuses
- if @user_most_commented_status.present?
  %table{:style => "width:100%;margin: 0;"}
    %tr
      %th{:width => "82%"}
        Status at wall
      %th
        Comments
  %div{:style => "width:99%"}
    %table{:style => "width:100%; margin: 0;",:cellspacing => 0,:cellpadding => 0}
      - @user_most_commented_status.each do |status|
        %tr{:id => "most_commented_likes_status"}
          %td{:width => "82%",:style => "font-size:12px;font-weight:bold;padding-left: 10px;cursor:pointer",:title => "#{status['message']}"}
            = "#{status['message']}".truncate(70, :separator => ' ')
          %td{:style => "text-align:center;font-size:12px;font-weight:bold;"}
            %div
              = image_tag "comment.png"
            = status["comments_count"]
    - status = @user_most_commented_status.first
    %div{:class=> "test",:style=>"display:none;background-color: #010B21;border-radius: 3px;color: #FFFFFF;margin-right: 28%;margin-top: -18%;max-width: 89%;padding: 8px;position: absolute;"}
      = status['message']
- else
  %tr
    %td{:rowspan=>2}
      No data available
